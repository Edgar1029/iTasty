	<div class="container-center row news_container">
		
        <div class="col-2"></div>
        <div id="news_Carousel" class="carousel slide col-8" data-bs-ride="carousel" data-bs-interval="100000">
			<h2>最新食譜</h2>

            <div class="carousel-inner">

                @if (Model.Recipes.Count > 0)
                {
                    for (int j = 0; j < Model.Recipes.Count; j += 3)
                    {
                        <div class="carousel-item @(j == 0 ? "active" : "")">
                            <div class="row">
                                @for (int k = 0; k < 3 && (j + k) < Model.Recipes.Count; k++)
                                {
                                    var recipe = Model.Recipes[j + k];
                                    <div class="col-4">
                                        <div class="card shadow-sm">
                                            <img src="data:image/jpg;base64,@Convert.ToBase64String(recipe.RecipeCoverImage)" class="card-img-top" alt="...">
                                            <div class="card-body">

                                                <p class="card-text">@recipe.RecipeName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <div class="row">
                            <div class="col-12">
                                <p>沒有相關食譜</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (Model.Recipes.Count > 3){ 
            <button class="carousel-control-prev" type="button" data-bs-target="#news_Carousel" data-bs-slide="prev" style="justify-content:flex-start;width:50px">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#news_Carousel" data-bs-slide="next" style="justify-content:flex-start;width:50px">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
				}
     </div>

	
    <div class="col-2"></div>
</div>
}
