@model project_itasty.Models.HelpForm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>HelpForm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionContent)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
        <dt class="col-sm-2">
            問題圖片
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.QuestionImage != null)
                {
                    <img src="data:image/jpg;base64, @Convert.ToBase64String(Model.QuestionImage)" class="" />
                }
                else
                {
                    <img src="" class="">
                    // <img src="./img/img_user_icon.png" class="img_user_icon d-inline rounded-circle">
                }

            }
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FormId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
