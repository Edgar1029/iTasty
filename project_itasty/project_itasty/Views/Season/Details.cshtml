    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SeasonalIngredient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MonthId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MonthId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CommonName)
        </dt>
