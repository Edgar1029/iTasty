												DateTime now = DateTime.Now;
												DateTime message_time = Model.MessageTables[i].CreateTime;
												TimeSpan time_gap = now - message_time;

												if (time_gap.TotalSeconds < 60)
												{
													<p>幾秒前</p>
												}
