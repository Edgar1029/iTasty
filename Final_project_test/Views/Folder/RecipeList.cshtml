@model array2js

@{
    ViewData["Title"] = "Recipe List";
}
@section MyHeadScripts {
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITASTY | Perfect Receipe Await</title>
    <link rel="icon" href="../img/logo_.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/favorite_css.css">
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/favorite_script.js"></script>
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
}
<h2>Recipe List for User @Model.UserId</h2>

<h3>Favorite Recipes</h3>
<ul>
    @foreach (var recipe in Model.favoriteRecipe)
    {
        <li>Recipe Name: @recipe</li>
    }
</ul>

<h3>Shopping Recipes</h3>
<ul>
    @foreach (var recipe in Model.shopRecipe)
    {
        <li>Recipe Name: @recipe</li>
    }
</ul>

<h3>Edited Recipes</h3>
<ul>
    @foreach (var recipe in Model.editRecipe)
    {
        <li>Recipe Name: @recipe</li>
    }
</ul>

<h3>Custom Folders</h3>
@for (int i = 0; i < Model.customRecipeName.Count; i++)
{
    <h4>@Model.customRecipeName[i]</h4>
    <ul>
        @foreach (var recipe in Model.customRecipe[i])
        {
            <li>Recipe Name: @recipe</li>
        }
    </ul>
}

<h3>Shopping List Ingredients</h3>
<table id="ingredients-table">
    <thead>
        <tr>
            <th>Ingredient Name</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model.ingredientsTables)
        {
            <tr>
                <td>@ingredient.IngredientsName</td>
                <td>@ingredient.IngredientsNumber</td>
                <td>@ingredient.IngredientsUnit</td>
            </tr>
        }
    </tbody>
</table>